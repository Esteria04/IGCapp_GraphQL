datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int       @id @default(autoincrement())
    name     String
    nickname String
    school   String
    profile  Profile?
    article  Article[]
    comment  Comment[]
}

model Profile {
    id     Int
    userId Int  @unique
    User   User @relation(fields: [userId], references: [id])
}

model Comment {
    id            Int      @id @default(autoincrement())
    authorId      Int      @unique
    author        User     @relation(fields: [authorId], references: [id])
    articleId     Int      @unique
    article       Article  @relation(fields: [articleId], references: [id])
    type          Boolean
    publishedDate DateTime
    modifiedDate  DateTime
    content       String
}

model Article {
    id            Int      @id @default(autoincrement())
    authorId      Int      @unique
    author        User     @relation(fields: [authorId], references: [id])
    type          Boolean
    publishedDate DateTime
    modifiedDate  DateTime
    content       String
    comment       Comment[]
}